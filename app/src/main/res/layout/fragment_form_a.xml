<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_back_center">

    <TextClock
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:format24Hour="yyyy/MM/dd    EE    HH:mm:ss"
        android:text="2019/09/20    星期五"
        android:textColor="@color/white"
        android:textSize="@dimen/date" />

    <TextView
        android:id="@+id/room_num_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="5dp"
        android:text="会议室编号：999"
        android:textColor="@color/white"
        android:textSize="@dimen/meeting_room_num"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/time_remaining_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:background="@drawable/time_remaining_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/space_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="会议进行中"
            android:textColor="@color/my_back"
            android:textSize="@dimen/time_remain_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="累计"
            android:textColor="@color/my_back"
            android:textSize="@dimen/time_remain_title" />

        <TextView
            android:id="@+id/time_going_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="00:00"
            android:textColor="@color/my_orange"
            android:textSize="@dimen/time_remain"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="不忘初心，牢记使命"
            android:textSize="50sp"
            android:textColor="@color/my_orange" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="会议即将开始，请大家遵守会议室使用条例。\n\n手机保持静音，谢谢!"
            android:lineSpacingExtra="20dp"
            android:textSize="30sp"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>